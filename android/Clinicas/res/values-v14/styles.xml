<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Clinicas</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Clinicas</item>
        <item name="android:actionBarTabTextStyle">@style/My.TabText.Style</item>
    </style>
    
     <style name="My.TabText.Style" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>
    
	<style name="ActionBar.Solid.Clinicas" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_clinicas</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_clinicas</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_clinicas</item>
        
    </style>
    
</resources>
